# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{htm,html,js,jsx,php,css,json,sass,scss,ts,tsx,md,exs,ex,ml,mli,hs,tex,v,scala,ds,re,rei,handlebars}]
indent_size = 2

[{Makefile,GNUmakefile}]
indent_style = tab

[*.go]
indent_style = tab

[.emacs]
indent_size = 2

[*.diff]
trim_trailing_whitespace = false
